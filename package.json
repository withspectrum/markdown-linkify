{
  "name": "markdown-linkify",
  "version": "1.0.2",
  "description": "Turn plain URLs in text into Markdown links. Works in the browser and on the server.",
  "repository": {
    "type": "git",
    "url": "https://github.com/withspectrum/markdown-linkify.git"
  },
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "prebuild": "rimraf dist",
    "prepublish": "npm run build",
    "build": "babel src --out-dir dist --ignore '*.test.js'",
    "test": "jest src",
    "prettier": "prettier --write --single-quote --trailing-comma es5 'src/**/*.js'",
    "flow": "flow src"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote --trailing-comma es5",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-cli": "6.x.x",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "flow-bin": "^0.45.0",
    "husky": "^0.13.4",
    "jest": "19.x.x",
    "lint-staged": "^3.6.1",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "linkify-it": "^2.0.3"
  }
}
